{
  "name": "typescript-backend-service",
  "version": "0.1.0",
  "description": "TypeScript backend service following modern architecture patterns",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:integration": "playwright test",
    "prepare": "is-ci || husky",
    "check": "npm run lint:check && npm run format:check && npm run type-check",
    "lint:check": "eslint . --ext .ts",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test:all": "npm run test && npm run test:integration",
    "clean": "rimraf dist",
    "build:clean": "npm run clean && npm run build",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only src/server.ts",
    "playwright:install": "playwright install",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/repository/config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/repository/config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/infrastructure/database/config.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/repository/config.ts"
  },
  "dependencies": {
    "@langchain/core": "^0.3.42",
    "@langchain/openai": "^0.4.4",
    "axios": "^1.8.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.19",
    "mathjs": "^14.3.1",
    "morgan": "^1.10.0",
    "pg": "^8.14.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.21",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.38.1",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^9.1.3",
    "nock": "^13.4.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "glob": "^8.1.0",
    "lodash.get": "^4.4.2",
    "lodash.isequal": "^4.5.0"
  },
  "overrides": {
    "glob": "^8.1.0"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
